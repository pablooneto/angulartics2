{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "types": [
      "jasmine",
      "node",
      "google.analytics",
      "applicationinsights-js",
      "segment-analytics",
      "facebook-pixel"
    ],
    "paths": {
      "ngx-analytics": ["./lib/core/public_api"]
    }
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
